{% extends 'AnticomShowcaseBundle::base.html.twig' %}
{% import "AnticomShowcaseBundle::_macros.html.twig" as tools %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Bitte melden Sie sich an</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                            <fieldset>
                                <div class="form-group">
                                    {% for error in form.username.vars.errors %}
                                        {{ tools.alert(error.message, 'danger') }}
                                    {% endfor %}
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': form.username.vars.label}}) }}
                                </div>
                                <div class="form-group">
                                    {% for error in form.email.vars.errors %}
                                        {{ tools.alert(error.message, 'danger') }}
                                    {% endfor %}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': form.email.vars.label}}) }}
                                </div>
                                <div class="form-group">
                                    {% for error in form.password.vars.errors %}
                                        {{ tools.alert(error.message, 'danger') }}
                                    {% endfor %}
                                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': form.password.vars.label}}) }}
                                </div>
                                <div class="form-group">
                                    {% for error in form.password2.vars.errors %}
                                        {{ tools.alert(error.message, 'danger') }}
                                    {% endfor %}
                                    {{ form_widget(form.password2, {'attr': {'class': 'form-control', 'placeholder': form.password2.vars.label}}) }}
                                </div>

                                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-lg btn-primary btn-block', 'value': form.submit.vars.label}}) }}
                            </fieldset>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}